            var abc = window.location.href.toString();
            console.log(abc)
            if (abc === "http://localhost:46686/" || abc == "http://localhost:46686/#") {
                $()
                $("#urls").html(`<div class="img_bottom" id="img_url">
                    <div class="overlay_img"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 col-md-10 mx-auto text-center">
                                <div class="page-heading">
                                    <h2>Doar sangue é dedicar a esperança para até três vidas.
Espalhe amor doando sangue a quem tanto precisa!
