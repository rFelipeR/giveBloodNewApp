@model IEnumerable<DAL.BloodCenter>
    <div class="container">
        <div class="row space_content">
            <div class="col">
                <h2>Hemocentros</h2>
                <div style="margin-top: 1.5rem; max-height:500px; overflow:auto">

                    @foreach (DAL.BloodCenter bloodCenter in Model)
                    {
                        <div style="margin-bottom: 1rem; border-bottom: .8px solid #333">
                            <div>
                                <p><b>@bloodCenter.name_bc</b></p>
                                <p class="year">@(bloodCenter.address) – @(bloodCenter.city.name_city)</p>
                                <p> <i class="fas fa-phone-square" style="margin-right:5px"></i> @bloodCenter.phone</p>
                                <p>
                                    <i class="fas fa-envelope" style="margin-right:5px"></i> @bloodCenter.email
                                </p>
                            </div>
                            <div>
                            </div>
                        </div>
                    }

                </div>
            </div>    
            <div class="col">
                <h3>Suporte</h3>
                <h6>Encaminhe dúvidas, sugestões de melhoria, etc...</h6>
                <div>

                    <form style="margin-top: 1.5rem">
                        <div class="form-group">
                            <label for="exampleFormControlInput2">Nome</label>
                            <input type="email" class="form-control" id="exampleFormControlInput2" placeholder="Digite seu nome...">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Email</label>
                            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Mensagem</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-outline-secondary">Enviar</button>
                    </form>
                    <p style="position:absolute; right:0"> É funcionário do hemocentro?<a class=" btn btn-link" asp-area="" asp-controller="Login" asp-action="Index">Clique aqui</a></p>

                </div>
            </div>
        </div>
    </div>