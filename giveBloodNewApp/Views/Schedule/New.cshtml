@model DAL.Scheduling
@{
    List<DAL.BloodCenter> bloodCenters  = ViewBag.BloodCenters;
    List<DAL.Donor> donors = ViewBag.Donors;
}

<h1>Novo Agendamento</h1>
<br />

<form method="post" enctype="multipart/form-data">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="bloodcenter">Selecione o Hemocentro</label>
            <select class="form-control" name="id_blood_center">
                @foreach (DAL.BloodCenter bloodCenter in bloodCenters)
                {
                    <option value="@bloodCenter.id_bc" for> @bloodCenter.name_bc</option>
                }
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="Date">Data e hora da doação</label>
            <input type="datetime-local" class="form-control" name="date">
        </div>

        <div class="form-group">
            <label for="bloodcenter">Selecione o doador</label>
            <select class="form-control" name="id_donor">
                @foreach (DAL.Donor donor in donors)
                {
                    <option value="@donor.id" for> @donor.name</option>
                }
            </select>
        </div>

    </div>




    <button type="submit" class=" btn btn-primary"> Cadastrar </button>
</form>