@model DAL.Employee


    <div class="space_content">

        <h1 style="margin-top: 1rem">Acesse sua conta</h1>

        <div class="row">
            <div class="col-6">
                <h2>Já tenho uma conta</h2>
                <form method="post">
                    <div class="form-group">
                        <label for="user">Usuário</label>
                        <input type="email" class="form-control" id="user" name="Email" />
                    </div>
                    <div class="form-group">
                        <label for="pass">Senha</label>
                        <input type="password" class="form-control" id="pass" name="Hash" />
                    </div>
                    <button class="btn btn-dark">Acessar</button>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                    }
                </form>
            </div>
            <div class="col-6">
                <h2>Criar uma nova conta</h2>
                <form method="post" enctype="multipart/form-data" action="@Url.Action("Create")">
                    <div class="form-group">
                        <label for="name">Nome</label>
                        <input type="text" class="form-control" id="name" name="Name" />
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="text" class="form-control" id="email" name="Email" />
                    </div>

                    <div class="form-group">
                        <label for="pass">Senha</label>
                        <input type="password" aria-describedby="passwordHelpBlock" class="form-control" id="pass" name="Hash" />
                        <small id="passwordHelpBlock" class="form-text text-muted">
                            Sua senha deve ter de 8 a 20 caracteres, conter letras e números e não deve conter espaços, caracteres especiais ou emoji.
                        </small>
                    </div>


                    <button class="btn btn-dark">Criar Conta</button>
                </form>
            </div>
        </div>
    </div>
